@model TaskManager.Models.TaskModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpload">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDeadline" class="control-label"></label>
                <input asp-for="TaskDeadline" class="form-control" />
                <span asp-validation-for="TaskDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskStatus" class="control-label"></label>
                <input asp-for="TaskStatus" class="form-control" />
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskImportance" class="control-label"></label>
                <input asp-for="TaskImportance" class="form-control" />
                <span asp-validation-for="TaskImportance" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="KategoriId" value="@Model.KategoriId" class="form-control" />
            <input type="hidden" asp-for="TackKategori" value="@Model.TackKategori" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
